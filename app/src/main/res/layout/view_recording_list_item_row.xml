<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_recording_list_item_row_rootConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">


    <Button
        android:id="@+id/view_recording_list_item_row_playPauseButton"
        android:layout_width="88dp"
        android:layout_height="wrap_content"


        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_recording_list_item_row_current_time_textView"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@+id/view_recording_list_item_row_current_time_remaining_time_textView"
        app:layout_constraintRight_toRightOf="@+id/view_recording_list_item_row_seekBar"
        app:layout_constraintTop_toTopOf="@+id/view_recording_list_item_row_current_time_remaining_time_textView" />

    <TextView
        android:id="@+id/view_recording_list_item_row_current_time_remaining_time_textView"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/view_recording_list_item_row_seekBar"
        app:layout_constraintRight_toLeftOf="@+id/view_recording_list_item_row_current_time_textView"
        app:layout_constraintTop_toBottomOf="@+id/view_recording_list_item_row_playPauseButton" />


    <TextView
        android:id="@+id/view_recording_list_item_row_mainTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/view_recording_list_item_row_current_time_remaining_time_textView"
        app:layout_constraintRight_toRightOf="@+id/view_recording_list_item_row_playPauseButton"
        app:layout_constraintTop_toBottomOf="@+id/view_recording_list_item_row_current_time_remaining_time_textView"
        app:layout_constraintVertical_bias="0.0" />

    <SeekBar
        android:id="@+id/view_recording_list_item_row_seekBar"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_recording_list_item_row_playPauseButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/view_recording_list_item_row_playPauseButton"
        app:layout_constraintTop_toTopOf="@+id/view_recording_list_item_row_playPauseButton"
        app:layout_constraintVertical_bias="0.5" />

</android.support.constraint.ConstraintLayout>